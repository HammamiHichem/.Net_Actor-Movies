@model Association

<h2>Add Actor To Movie</h2>
<form asp-action="AddAssociation" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="ActorId">Actors:</label>
        <select asp-for="ActorId" class="form-select">
            @foreach (Actor a in ViewBag.AllActors)
            {
                <option value="@a.ActorId">@a.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MovieId">Movies:</label>
        <select asp-for="MovieId" class="form-select">
            @foreach (Movie a in ViewBag.AllMovies)
            {
                <option value="@a.MovieId">@a.Title</option>
            }
        </select>
    </div>
    <input type="submit" value="Add Role" class="btn btn-info">
</form>

<hr />

<h2>All Associations</h2>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Actors</th>
                <th>Titles Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var association in ViewBag.AllAssociations)
            {
                <tr>
                    <td>@association.Actor.Name</td>
                    <td>@association.Movie.Title</td>
                </tr>
            }
        </tbody>
    </table>
</div>
