<style>
    body {
            width: 100%;
            height: 100vh;
            margin: 0;
            background-color: #1b1b32;
            color: #f5f6f7;
            font-family: Tahoma;
            font-size: 16px;
          }
    .navbar {
    display: flex;
    background-color: #f5f5f5;
    padding: 5px;
    justify-content: space-between; /* Aligns elements to the left and right */
}
          
          h2, p {
            margin: 1em auto;
            text-align: center;
          }
          
          form {
            width: 60vw;
            max-width: 500px;
            min-width: 300px;
            margin: 0 auto;
            padding-bottom: 2em;
          }
          
          fieldset {
            border: none;
            padding: 2rem 0;
            border-bottom: 3px solid #3b3b4f;
          }
          
          fieldset:last-of-type {
            border-bottom: none;
          }
          
          label {
            display: block;
            margin: 0.5rem 0;
          }
          
          input,
          textarea,
          select {
            margin: 10px 0 0 0;
            width: 100%;
            min-height: 2em;
          }
          
          input, textarea {
            background-color: #0a0a23;
            border: 1px solid #0a0a23;
            color: #ffffff;
          }
          
          .inline {
            width: unset;
            margin: 0 0.5em 0 0;
            vertical-align: middle;
          }
          
          input[type="submit"] {
            display: block;
            width: 60%;
            margin: 1em auto;
            height: 2em;
            font-size: 1.1rem;
            background-color: #3b3b4f;
            border-color: white;
            min-width: 300px;
          }
          
          input[type="file"] {
            padding: 1px 2px;
          }
          
          .inline{
            display: inline; 
          }
          
          a{
            color : #dfdfe2;
          }
          
</style>
@model User

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ActrosMovies.styles.css" asp-append-version="true" />
}

<div class="hero">
    <div class="form-box">
        <h2>Register</h2>
        <p>Please fill out this form with the required information</p>
        <fieldset>
 <form asp-action="CreateUser" asp-controller="Home" method="post">
            <div class="mb-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Confirm"></label>
                <input asp-for="Confirm" class="form-control" type="password">
                <span asp-validation-for="Confirm" class="text-danger"></span>
            </div>
            <div id="btn">
                <input type="submit" value="Register" class="toggle-btn">
            </div>
        </form>
        </fieldset>
    </div>
    <div class="form-box1">
        @await Html.PartialAsync("_LoginUser")
    </div>
</div>
